<section class="orders-show">

  <header class="page-header"> 
    <h1>Order #<%= @order.id %></h1> 
  </header>

  <div class="order-summary jumbotron"> 
    <h4>Thank you for your order!</h4> 
    <p>You ordered the following items:</p> 
    <table class="table table-bordered"> 
      <thead> 
        <tr> 
          <th>Image</th> 
          <th>Name</th> 
          <th>Description</th> 
          <th>Quantity</th> 
          <th>Price</th> 
          <th>Total</th> 
        </tr> 
      </thead> 
      <tbody>
        <% @order.line_items.each do |line_item| %> 
          <tr> 
            <td><%= image_tag line_item.product.image.url %></td> 
            <td><%= line_item.product.name %></td> 
            <td><%= line_item.product.description %></td> 
            <td><%= line_item.quantity %></td> 
            <td><%= humanized_money_with_symbol line_item.item_price / 1.0 %></td> 
            <td><%= humanized_money_with_symbol line_item.total_price / 1.0 %></td> 
          </tr> 
        <% end %> 
      </tbody>
    </table> 
    <p>The final amount for your order is: <%= humanized_money_with_symbol @order.total_cents / 100.0 %></p> 
    <p>We have sent a confirmation email to: <%= @order.email %></p> 
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>